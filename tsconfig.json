{
  "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "target": "ES2016",
      "moduleResolution": "Node10",
      "module": "CommonJS",
      "declaration": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}